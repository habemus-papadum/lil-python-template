[project]
name = "habemus-papadum-{{ package_name }}"
version = "0.1.0-alpha"
description = "{{ package_description }}"
readme = "README.md"
license = { file = "LICENSE" }
keywords = []
classifiers = [
    "Programming Language :: Python :: 3",
    "License :: OSI Approved :: MIT License",
    "Operating System :: OS Independent",
    "Intended Audience :: Developers",
    "Topic :: Software Development :: Libraries",
    "Topic :: Software Development :: Libraries :: Python Modules",
]

authors = [
    { name = "{{ author_name }}", email = "{{ author_email }}" }
]
requires-python = ">={{ python_version }}"
dependencies = []

[project.urls]
Homepage = "https://github.com/{{ github_username }}/{{ package_name }}"
Repository = "https://github.com/{{ github_username }}/{{ package_name }}"
Documentation = "https://github.com/{{ github_username }}/{{ package_name }}"


[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = ["src/pdum"]
{% if include_ts_widgets %}
artifacts = [
    "src/pdum/{{ package_slug }}/widgets/*.js",
]
{% endif %}

[dependency-groups]
dev = [
    "hatch>=1.14.2",
    "pytest>=8.0.0",
    "pytest-cov>=7.0.0",
    "pytest-playwright>=0.5.0",
    "playwright>=1.45.0",
    "ruff>=0.13.3",
    "mkdocs>=1.6.1",
    "mkdocs-material>=9.5.0",
    "mkdocstrings>=0.26.1",
    "mkdocstrings-python>=1.11.1",
    "mkdocs-jupyter>=0.25.1",
    "jupyter>=1.1.1",
    "rich>=13.7.1",
    "inquirerpy>=0.3.4",
    "pre-commit>=3.7.0",
    "watchdog>=3.0.0",
]

[tool.ruff]
target-version = "py{{ python_version | replace('.', '') }}"
line-length = 120
exclude = []

[tool.ruff.lint]
select = ["E", "F", "W", "I"]
ignore = []

[tool.pytest.ini_options]
testpaths = ["tests"]
addopts = "-s"
python_files = ["test_*.py"]
python_classes = ["Test*"]
python_functions = ["test_*"]

[tool.coverage.run]
source = ["src/pdum/{{ package_slug }}"]
relative_files = true
omit = [
    "*/tests/*",
    "*/testing.py",
]
