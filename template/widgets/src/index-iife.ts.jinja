import { renderWidget } from './widget';
import type { WidgetPayload } from './types';
import { VERSION } from './version';

const WIDGET_CLASS = 'pdum-{{ package_slug | replace('_', '-') }}-widget';
const DATA_ATTRIBUTE = 'data-{{ package_slug | replace('_', '-') }}-widget';
declare const __WIDGET_STYLES__: string;

function injectStyles() {
  const styleId = 'pdum-{{ package_slug | replace('_', '-') }}-widget-styles';
  if (document.getElementById(styleId)) {
    return;
  }

  const style = document.createElement('style');
  style.id = styleId;
  style.textContent = typeof __WIDGET_STYLES__ === 'string' ? __WIDGET_STYLES__ : '';
  document.head.appendChild(style);
}

function boot() {
  injectStyles();
  const nodes = document.querySelectorAll(`.${WIDGET_CLASS}`);
  nodes.forEach((node) => {
    const element = node as HTMLElement;
    const raw = element.getAttribute(DATA_ATTRIBUTE);
    if (!raw) {
      return;
    }

    try {
      const payload = JSON.parse(raw) as WidgetPayload;
      renderWidget(element, payload);
    } catch (error) {
      console.error('Failed to render widget payload', error);
    }
  });
}

if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', boot);
} else {
  boot();
}

(window as typeof window & { {{ widget_global_name }}?: Record<string, unknown> }).{{ widget_global_name }} = {
  VERSION,
  renderWidget,
};
